{
  "KVLConfiguration": {
    "ConfigurationRootFolder": "D:\\KVL\\2024-11\\SRC\\Config",
    "AlphaServiceUrl": "http://localhost:2222/api",
    "VideoPlayerHost": "http://z2-alpha-vid.vis.kaust.edu.sa:13579",
    "VideoPlayerFolder": "c:\\videos"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "HTTP": {
        "Url": "http://localhost:2222"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Diagnostics": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "{Timestamp:mm:ss zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:mm:ss zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{EventId}] {Properties:j} {Message:lj}{NewLine}{Exception}",
          "apiKey": "6Sx7m8gQXXrUdnVXbvdy",
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{EventId}] {Properties:j} {Message:lj}{NewLine}{Exception}",
          "pathFormat": "c:/logs/zone-api/log-{Date}.txt"
        }
      }
    ]
  }
}